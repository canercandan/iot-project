<boxes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns="http://www.ionlythink.com"
      xsi:schemaLocation="http://www.ionlythink.com schema.xsd"
      id="Application">
  <box type="2" x="750" y="1" height="80" width="240">
    <action id="ExecMenu">
      <action id="ExecProcess" name="Firefox" time="5000"
	      path="default_path"
	      unix-path="firefox"
	      win-path="C:\Program Files\Mozilla Firefox\firefox.exe"
	      mac-path="unknown"
	      />
    </action>
    <style fontSize="12" opacity="1" text="Firefox" imagePath=":images/software/firefox.png" rounded="true"/>
  </box>

  <box type="2" x="750" y="101" height="80" width="240">
    <action id="ExecMenu">
      <action id="ExecProcess" time="5000"
	      path="C:\Program Files\Windows Media Player/wmplayer.exe"
	      win-path="C:\Program Files\Windows Media Player/wmplayer.exe"
	      />
    </action>
    <style fontSize="12" opacity="1" text="Windows Media Player" imagePath=":images/software/wmp.png" rounded="true"/>
  </box>

  <box type="2" x="750" y="201" height="80" width="240">
    <action id="ExecMenu">
      <action id="ExecProcess" time="3000"
	      path="C:\Program Files\Notepad++\notepad++.exe"
	      win-path="C:\Program Files\Notepad++\notepad++.exe"
	      />
    </action>
    <style fontSize="12" opacity="1" text="Notepad++" imagePath=":images/software/notepad++.png" rounded="true"/>
  </box>

  <box type="2" x="750" y="301" height="80" width="240">
    <action id="ExecMenu">
      <action id="ExecProcess" time="1000"
	      unix-path="gnome-calculator"
	      win-path="C:\WINDOWS\system32\calc.exe"
	      />
    </action>
    <style fontSize="12" opacity="1" text="Calculator" fr-text="Calculatrice" imagePath=":images/software/calc.png" rounded="true"/>
  </box>

  <box type="2" x="750" y="401" height="80" width="240">
    <action id="ExecMenu">
      <action id="Cancel"/>
    </action>
    <style fontSize="12" opacity="1" text="Back" fr-text="Retour" imagePath=":images/menu/cancel.png" rounded="true"/>
  </box>

</boxes>
