<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration debug="true" xmlns:log4j="http://jakarta.apache.org/log4j/">
  
  <appender name="console" class="org.apache.log4j.ConsoleAppender"> 
    <param name="Target" value="System.out"/> 
    <layout class="org.apache.log4j.PatternLayout"> 
      <param name="ConversionPattern" value="%-5p %c{1} - %m%n"/> 
    </layout> 
  </appender> 
  
  <appender name="networkAppender" class="org.apache.log4j.FileAppender">
    <param name="file" value="/tmp/cegNetwork.log" />
    <param name="append" value="true" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%p (%d{dd/MM/yyyy HH:mm:ss}) : %m%n" />
    </layout>
  </appender>
  
  <appender name="comgsAppender" class="org.apache.log4j.FileAppender">
    <param name="file" value="/tmp/cegComgs.log" />
    <param name="append" value="true" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%p (%d{dd/MM/yyyy HH:mm:ss}) : %m%n" />
    </layout>
  </appender>
  
  <appender name="mainAppender" class="org.apache.log4j.FileAppender">
    <param name="file" value="/tmp/cegMain.log" />
    <param name="append" value="true" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%p (%d{dd/MM/yyyy HH:mm:ss}) : %m%n" />
    </layout>
  </appender>

  <appender name="factoryAppender" class="org.apache.log4j.FileAppender">
    <param name="file" value="/tmp/cegFactory.log" />
    <param name="append" value="true" />
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="%p (%d{dd/MM/yyyy HH:mm:ss}) : %m%n" />
    </layout>
  </appender>
  

  <root> 
    <priority value ="all" /> 
    <appender-ref ref="console" /> 
  </root>
  
  <logger name="ceg.network"> <!-- Logger pour toute la partie reseau -->
    <appender-ref ref="networkAppender" />
  </logger>

  <logger name="ceg.comgs">  <!-- Logger pour toute la partie interraction avec le serveur graphique -->
    <appender-ref ref="comgsAppender" />
  </logger>

  <logger name="ceg.main">  <!-- Logger pour toute la partie ds le MainController -->
    <appender-ref ref="mainAppender" />
  </logger>

  <logger name="ceg.boxfactory">  <!-- Logger pour toute la partie creation des box ou des items -->
    <appender-ref ref="factoryAppender" />
  </logger>

</log4j:configuration>
